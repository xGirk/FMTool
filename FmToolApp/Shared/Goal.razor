<div class="uk-card uk-card-small uk-text-center uk-padding-remove uk-height-large">
    <div class=" uk-card-header">
        <h2 class="uk-card-title">@CareerGoal?.Name</h2>
    </div>
    <div class="uk-card-body">
        <p>@CareerGoal?.Description </p>
        <p>@CareerGoal?.AdvancedDescription </p>
    </div>
    <div class="uk-card-footer uk-position-absolute uk-position-bottom-center">
        @if (CareerGoal != null)
        {
            <p>Difficulty : @CareerGoal?.Difficulty </p>
        }
        <button class="uk-button uk-button-primary" @onclick="SetCareerGoal">Generate Career Goal</button>
    </div>
</div>


@code {
    [Parameter]
    public List<CareerGoal> Data { get; set; }

    public CareerGoal CareerGoal { get; set; }

    private void SetCareerGoal()
    {
        CareerGoal = GetRandom(Data);
    }
}