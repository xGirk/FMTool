<hr class="uk-text-center"/>

<div class="uk-card uk-card-small uk-text-center">
    <div class="uk-card-header">
        <h4 class="uk-card-title">Formation : @formation</h4>
    </div>

    <div class="uk-button-group">
        <button class="uk-button uk-button-primary" @onclick="SetFormation">Generate Formation</button>
        <button class="uk-button @(Advanced ? "uk-button-secondary" : "uk-button-danger")" @onclick="ToggleAdvanced">@(Advanced ? "Advanced" : "Simple")</button>
    </div>
</div>

<hr class="uk-divider-small uk-text-center"/>

@code {
    [Parameter]
    public string formation { get; set; }

    [Parameter]
    public bool Advanced { get; set; } = true;

    private void SetFormation()
    {
        formation = FMTool.Models.Formation.GenerateFormation(Advanced);
    }

    protected override async Task OnInitializedAsync()
    {
        SetFormation();
    }

    private void ToggleAdvanced()
    {
        Advanced = !Advanced;
    }
}